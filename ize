[32m+[m[32mimport { useState, useRef, useEffect } from "react";[m
 import PdfViewer from "./components/PdfViewer";[m
 import SidebarContainer from "./containers/SidebarContainer";[m
[31m-import "bootstrap-icons/font/bootstrap-icons.css";[m
[32m+[m[32mimport ResizeHandle from "./components/ResizeHandle";[m
