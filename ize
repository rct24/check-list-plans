 [m
 function App() {[m
[32m+[m[32m  const INITIAL_SIDEBAR_WIDTH = 350;[m
[32m+[m
[32m+[m[32m  const [sidebarWidth, setSidebarWidth] = useState(INITIAL_SIDEBAR_WIDTH);[m
[32m+[m[32m  const [isResizing, setIsResizing] = useState(false);[m
[32m+[m[32m  const dragStartXRef = useRef(0);[m
[32m+[m[32m  const dragStartWidthRef = useRef(INITIAL_SIDEBAR_WIDTH);[m
[32m+[m[32m  const resizeHandleRef = useRef(null);[m
[32m+[m[32m  const currentWidthRef = useRef(INITIAL_SIDEBAR_WIDTH);[m
[32m+[m
[32m+[m[32m  const handleResizeStart = (e) => {[m
[32m+[m[32m    dragStartXRef.current = e.clientX;[m
[32m+[m[32m    dragStartWidthRef.current = sidebarWidth;[m
[32m+[m[32m    currentWidthRef.current = sidebarWidth;[m
[32m+[m[32m    setIsResizing(true);[m
[32m+[m[32m    document.body.style.cursor = "ew-resize";[m
[32m+[m[32m    document.body.classList.add("user-select-none");[m
[32m+[m
[32m+[m[32m    if (resizeHandleRef.current) {[m
[32m+[m[32m      resizeHandleRef.current.setPointerCapture(e.pointerId);[m
[32m+[m[32m    }[m
[32m+[m[32m  };[m
[32m+[m
[32m+[m[32m  const handleResizeEnd = (e) => {[m
[32m+[m[32m    if (!isResizing) return;[m
[32m+[m
[32m+[m[32m    if (e && e.pointerId && resizeHandleRef.current) {[m
[32m+[m[32m      try {[m
[32m+[m[32m        resizeHandleRef.current.releasePointerCapture(e.pointerId);[m
[32m+[m[32m      } catch (err) {[m
[32m+[m[32m        console.log("Error releasing pointer:", err);[m
[32m+[m[32m      }[m
[32m+[m[32m    }[m
[32m+[m[32m    setSidebarWidth(currentWidthRef.current);[m
[32m+[m[32m    setIsResizing(false);[m
[32m+[m[32m    document.body.style.cursor = "";[m
[32m+[m[32m    document.body.classList.remove("user-select-none");[m
[32m+[m[32m  };[m
[32m+[m
[32m+[m[32m  useEffect(() => {[m
[32m+[m[32m    const handlePointerMove = (e) => {[m
[32m+[m[32m      if (!isResizing) return;[m
[32m+[m
[32m+[m[32m      const delta = dragStartXRef.current - e.clientX;[m
[32m+[m[32m      const newWidth = Math.min([m
[32m+[m[32m        Math.max(dragStartWidthRef.current + delta, 200),[m
[32m+[m[32m        600[m
[32m+[m[32m      );[m
[32m+[m
[32m+[m[32m      currentWidthRef.current = newWidth;[m
[32m+[m
[32m+[m[32m      if (resizeHandleRef.current) {[m
[32m+[m[32m        const handlePosition = window.innerWidth - newWidth - 8;[m
[32m+[m[32m        resizeHandleRef.current.style.left = `${handlePosition}px`;[m
[32m+[m[32m      }[m
[32m+[m[32m    };[m
[32m+[m
[32m+[m[32m    const handlePointerUp = (e) => {[m
[32m+[m[32m      handleResizeEnd(e);[m
[32m+[m[32m    };[m
[32m+[m
[32m+[m[32m    if (isResizing) {[m
[32m+[m[32m      window.addEventListener("pointermove", handlePointerMove);[m
[32m+[m[32m      window.addEventListener("pointerup", handlePointerUp);[m
[32m+[m[32m      window.addEventListener("pointercancel", handlePointerUp);[m
[32m+[m[32m      window.addEventListener("blur", () => handleResizeEnd());[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return () => {[m
[32m+[m[32m      window.removeEventListener("pointermove", handlePointerMove);[m
[32m+[m[32m      window.removeEventListener("pointerup", handlePointerUp);[m
[32m+[m[32m      window.removeEventListener("pointercancel", handlePointerUp);[m
[32m+[m[32m      window.removeEventListener("blur", () => handleResizeEnd());[m
[32m+[m[32m    };[m
[32m+[m[32m  }, [isResizing]);[m
[32m+[m
   return ([m
     <AppContextProvider>[m
[31m-      <div className="container-fluid">[m
[31m-        <PdfViewer />[m
[31m-        <SidebarContainer />[m
[32m+[m[32m      <div className="container-fluid p-0">[m
[32m+[m[32m        <PdfViewer sidebarWidth={sidebarWidth} />[m
[32m+[m[32m        <ResizeHandle[m
[32m+[m[32m          forwardedRef={resizeHandleRef}[m
[32m+[m[32m          width={sidebarWidth}[m
[32m+[m[32m          isResizing={isResizing}[m
[32m+[m[32m          onPointerDown={handleResizeStart}[m
[32m+[m[32m        />[m
[32m+[m[32m        <SidebarContainer width={sidebarWidth} />[m
       </div>[m
     </AppContextProvider>[m
